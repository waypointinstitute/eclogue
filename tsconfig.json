{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@engine/*": ["engine/*"],
      "@game/*": ["game/*"],
      "@ui/*": ["ui/*"],
      "@content/*": ["content/*"]
    }
  },
  "include": ["src", "tests", "vite.config.ts"]
}
